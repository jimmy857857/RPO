/* pages/privacy/privacy.wxss */
.privacy-container {
  padding: 30rpx;
  min-height: 100vh;
  background: #F8F9FA;
  display: flex;
  flex-direction: column;
}

.privacy-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.privacy-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.privacy-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.privacy-content {
  flex: 1;
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.privacy-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}

.privacy-actions {
  display: flex;
  gap: 20rpx;
}

.agree-btn {
  flex: 2;
  background: var(--dopamine-primary);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.disagree-btn {
  flex: 1;
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E9ECEF;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 32rpx;
}