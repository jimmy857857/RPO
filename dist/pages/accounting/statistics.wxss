/* pages/accounting/statistics.wxss */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #1ba784 0%, #f3a694 100%);
  min-height: 100%;
}

/* 时间筛选器 */
.filter-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.filter-buttons {
  display: flex;
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.filter-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 15rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s ease;
}

.filter-btn.active {
  background: var(--dopamine-primary);
  color: white;
  font-weight: bold;
  transform: scale(1.05);
}

.date-picker {
  width: 100%;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}

.date-text {
  display: block;
}

/* 关键指标 */
.metrics-section {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-bottom: 20rpx;
}

.metric-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 15rpx;
  padding: 25rpx 15rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.income-card {
  border-top: 4rpx solid #1ba784;
}

.expense-card {
  border-top: 4rpx solid var(--dopamine-accent);
}

.balance-card {
  border-top: 4rpx solid var(--dopamine-secondary);
}

.metric-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.metric-value {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.metric-value.positive {
  color: #1ba784;
}

.metric-value.negative {
  color: var(--dopamine-accent);
}

.metric-change {
  display: block;
  font-size: 20rpx;
  color: #999;
}

/* 图表区域 */
.chart-section, .trend-section, .detail-section, .budget-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.export-btn {
  background: #1ba784;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  font-size: 22rpx;
}

/* 图表容器 */
.chart-container {
  height: 400rpx;
  background: #F8F9FA;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.pie-chart, .bar-chart {
  width: 100%;
  height: 100%;
  display: block;
}

/* 响应式图表适配 - 确保饼图在不同设备上正常显示 */
@media (max-width: 320px) {
  .chart-container {
    height: 320rpx;
    margin: 10rpx 0;
  }
}

@media (min-width: 321px) and (max-width: 375px) {
  .chart-container {
    height: 350rpx;
  }
}

@media (min-width: 376px) and (max-width: 414px) {
  .chart-container {
    height: 380rpx;
  }
}

@media (min-width: 415px) and (max-width: 480px) {
  .chart-container {
    height: 400rpx;
  }
}

@media (min-width: 481px) and (max-width: 768px) {
  .chart-container {
    height: 450rpx;
  }
}

@media (min-width: 769px) {
  .chart-container {
    height: 500rpx;
  }
}

/* 确保Canvas正确渲染 */
.pie-chart {
  width: 100% !important;
  height: 100% !important;
}

/* 图例容器优化 */
.legend-container {
  max-height: 200rpx;
  overflow-y: auto;
  padding: 10rpx 0;
  margin-top: 15rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  font-size: 24rpx;
}

.legend-item:last-child {
  border-bottom: none;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  flex-shrink: 0;
}

.legend-name {
  flex: 1;
  color: #333;
  min-width: 100rpx;
  font-size: 24rpx;
}

.legend-percent {
  font-size: 22rpx;
  color: var(--dopamine-primary);
  font-weight: bold;
  margin-right: 10rpx;
  min-width: 70rpx;
  text-align: right;
}

.legend-amount {
  font-size: 22rpx;
  color: #666;
  min-width: 90rpx;
  text-align: right;
}

/* 图例容器 */
.legend-container {
  max-height: 300rpx;
  overflow-y: auto;
  padding: 10rpx 0;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.legend-item:last-child {
  border-bottom: none;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #28A745;
  flex-shrink: 0;
}

.legend-name {
  flex: 1;
  font-size: 24rpx;
  color: #333;
  min-width: 80rpx;
}

.legend-percent {
  font-size: 22rpx;
  color: #28A745;
  font-weight: bold;
  margin-right: 10rpx;
  min-width: 60rpx;
  text-align: right;
}

.legend-amount {
  font-size: 22rpx;
  color: #666;
  min-width: 80rpx;
  text-align: right;
}

/* 趋势切换 */
.trend-toggle {
  display: flex;
  background: #F8F9FA;
  border-radius: 8rpx;
  padding: 4rpx;
}

.toggle-item {
  flex: 1;
  text-align: center;
  padding: 8rpx 15rpx;
  font-size: 22rpx;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.toggle-item.active {
  background: #1ba784;
  color: white;
}

/* 详细数据 */
.detail-btn {
  background: #F8F9FA;
  color: #666;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  font-size: 22rpx;
}

.detail-content {
  margin-top: 20rpx;
}

.detail-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.detail-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.detail-total {
  font-size: 22rpx;
  color: #666;
}

.detail-list {
  margin-bottom: 25rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.detail-item:last-child {
  border-bottom: none;
}

.item-category {
  flex: 1;
  font-size: 22rpx;
  color: #333;
}

.item-amount {
  font-size: 22rpx;
  font-weight: bold;
  color: #333;
  margin-right: 15rpx;
}

.item-percent {
  font-size: 20rpx;
  color: #1ba784;
  width: 50rpx;
  text-align: right;
}

/* 预算进度 */
.budget-status {
  font-size: 22rpx;
  font-weight: bold;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.budget-status.normal {
  background: #E8F5E8;
  color: #1ba784;
}

.budget-status.over {
  background: #FFE6E6;
  color: var(--dopamine-accent);
}

.budget-progress {
  margin-bottom: 20rpx;
}

.progress-bar {
  height: 12rpx;
  background: #E9ECEF;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress-fill {
  height: 100%;
  background: #1ba784;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-value {
  font-size: 22rpx;
  font-weight: bold;
  color: #1ba784;
}

.progress-desc {
  font-size: 20rpx;
  color: #666;
}

.category-budgets {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.category-budget {
  background: #F8F9FA;
  border-radius: 10rpx;
  padding: 15rpx;
}

.budget-category {
  display: block;
  font-size: 20rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.budget-progress-mini {
  height: 6rpx;
  background: #E9ECEF;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 6rpx;
}

.progress-fill-mini {
  height: 100%;
  background: #1ba784;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.budget-text {
  font-size: 18rpx;
  color: #666;
}

/* 操作按钮 */
.action-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
  margin-top: 20rpx;
}

.action-btn {
  background: #F8F9FA;
  color: #666;
  border: none;
  border-radius: 15rpx;
  padding: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.refresh-btn {
  background: var(--dopamine-accent);
  color: white;
}

.share-btn {
  background: #1ba784;
  color: white;
}

.setting-btn {
  background: #6C757D;
  color: white;
}

.btn-icon {
  font-size: 24rpx;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  display: block;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-desc {
  display: block;
  font-size: 24rpx;
  color: #999;
}



/* 滚动优化 */
scroll-view {
  -webkit-overflow-scrolling: touch;
}

/* 动画效果 */
.filter-btn, .toggle-item, .action-btn {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
}

.loading-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  display: block;
  animation: spin 1s linear infinite;
}

.loading-text {
  display: block;
  font-size: 26rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-state {
  text-align: center;
  padding: 60rpx 0;
  background: #FFE6E6;
  border-radius: 15rpx;
  margin: 20rpx 0;
}

.error-icon {
  font-size: 48rpx;
  margin-bottom: 20rpx;
  display: block;
  color: #FF6B6B;
}

.error-text {
  display: block;
  font-size: 26rpx;
  color: #FF6B6B;
  margin-bottom: 10rpx;
}

.error-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
}



/* 通用响应式规则 */
.container {
  max-width: 100%;
  box-sizing: border-box;
}

.metrics-section {
  flex-wrap: wrap;
  justify-content: space-between;
}

.metric-card {
  min-width: 200rpx;
  flex: 1;
  margin: 5rpx;
}

.chart-container {
  max-width: 100%;
  overflow: hidden;
}

.legend-container {
  flex-wrap: wrap;
  max-width: 100%;
}

.legend-item {
  min-width: 250rpx;
  max-width: 100%;
}

/* 图表响应式适配 */
.pie-chart, .bar-chart {
  width: 100%;
  height: 100%;
  max-width: 100%;
}

/* 确保图表在不同屏幕下正常显示 */
canvas {
  display: block;
  max-width: 100%;
  height: auto;
}

/* 移动端优化 */
@media (max-width: 480px) {
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 15rpx;
  }
  
  .trend-toggle {
    align-self: stretch;
  }
  
  .detail-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
}

/* 平板优化 */
@media (min-width: 769px) and (max-width: 1024px) {
  .metrics-section {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .category-budgets {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .action-section {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* 大屏优化 */
@media (min-width: 1025px) {
  .container {
    max-width: 800rpx;
  }
  
  .chart-container {
    height: 600rpx;
  }
}

/* 确保所有元素都能正确缩放 */
.container view, .container text, .container image {
  box-sizing: border-box;
}

/* 防止内容溢出 */
scroll-view {
  max-width: 100%;
  overflow-x: hidden;
}

/* 文本自适应 */
.text-responsive {
  font-size: 28rpx;
  line-height: 1.4;
}

/* 图片响应式 */
img {
  max-width: 100%;
  height: auto;
}