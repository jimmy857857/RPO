/* pages/accounting/record.wxss */
.container {
  padding: 30rpx;
  background: linear-gradient(135deg, var(--dopamine-primary) 0%, var(--dopamine-secondary) 100%);
  min-height: 100%;
}

/* 记账类型选择 */
.type-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.type-buttons {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.type-btn {
  text-align: center;
  padding: 25rpx;
  background: #F8F9FA;
  border-radius: 15rpx;
  transition: all 0.3s ease;
}

.type-btn.active {
  background: var(--dopamine-primary);
  color: white;
  transform: scale(1.05);
}

.type-icon {
  display: block;
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.type-text {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
}

/* 金额输入 */
.amount-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.amount-input {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
}

.currency-symbol {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.amount-field {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  border: none;
  outline: none;
  width: 300rpx;
}

/* 分类选择 */
.category-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15rpx;
}

.category-item {
  text-align: center;
  padding: 20rpx 10rpx;
  background: #F8F9FA;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.category-item.active {
  background: #1ba784;
  color: white;
  transform: scale(1.05);
}

.category-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.category-name {
  display: block;
  font-size: 22rpx;
}

/* 详细信息 */
.detail-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

.date-picker, .payment-picker {
  background: #F8F9FA;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
}

.date-text, .payment-text {
  font-size: 24rpx;
  color: #666;
}

.note-input {
  background: #F8F9FA;
  border-radius: 8rpx;
  padding: 15rpx;
  font-size: 24rpx;
  color: #666;
  width: 200rpx;
  text-align: right;
}

.upload-section {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.upload-btn {
  background: #F8F9FA;
  border: 2rpx dashed #CCC;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: #E9ECEF;
}

.upload-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 5rpx;
}

.upload-text {
  display: block;
  font-size: 22rpx;
  color: #666;
}

.image-preview {
  position: relative;
}

.receipt-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.remove-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: #FF6B6B;
  color: white;
  border: none;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
}

/* 操作按钮 */
.action-section {
  margin-bottom: 30rpx;
}

.save-btn {
  background: #1ba784;
  color: white;
  border: 2rpx solid #1ba784;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
  margin-bottom: 15rpx;
}

.save-btn:disabled {
  background: #CCC;
  opacity: 0.6;
}

.cancel-btn {
  background: #F8F9FA;
  color: #666;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
}

/* 快捷操作 */
.quick-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.quick-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.quick-amounts {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
}

.quick-item {
  background: #F8F9FA;
  border-radius: 8rpx;
  padding: 15rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.quick-item:active {
  background: #E9ECEF;
}

.quick-text {
  font-size: 24rpx;
  color: #666;
}

