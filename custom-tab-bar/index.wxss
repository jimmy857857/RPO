/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  z-index: 9999;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);
  background-size: 400% 400%;
  animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.tab-bar-content {
  position: relative;
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: space-around;
  padding: 0 20rpx;
  backdrop-filter: blur(40rpx) saturate(180%);
  -webkit-backdrop-filter: blur(40rpx) saturate(180%);
  background: rgba(255, 255, 255, 0.1);
  border-top: 0.5rpx solid rgba(255, 255, 255, 0.2);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 8rpx 0;
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
  transition: all 0.3s ease;
}

.tab-bar-item-active .tab-bar-icon {
  transform: scale(1.1);
  filter: drop-shadow(0 2rpx 6rpx rgba(255, 255, 255, 0.5));
}

.tab-bar-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
  font-weight: 400;
}

.tab-bar-item-active .tab-bar-text {
  color: #FFFFFF;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.tab-bar-indicator {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 0 0 4rpx 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.5);
  animation: indicatorFadeIn 0.3s ease;
}

@keyframes indicatorFadeIn {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

