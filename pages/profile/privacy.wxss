/* 隐私政策页面样式 */
.privacy-container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f8f9fa;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1ba784;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.content {
  height: 70vh;
  margin-bottom: 20rpx;
}

.section {
  background: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1ba784;
  display: block;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-line;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.agree-btn {
  background: #1ba784;
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 20rpx 0;
  width: 100%;
}

.agree-btn:active {
  background: #189c74;
}