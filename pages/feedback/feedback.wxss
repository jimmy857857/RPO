/* pages/feedback/feedback.wxss */
.feedback-container {
  padding: 30rpx;
  min-height: 100vh;
  background: #F8F9FA;
}

.feedback-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.feedback-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.feedback-subtitle {
  display: block;
  font-size: 26rpx;
  color: #666;
}

.feedback-form {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-section {
  margin-bottom: 40rpx;
}

.form-section:last-child {
  margin-bottom: 0;
}

.section-label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.type-radio-group {
  display: flex;
  gap: 30rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.radio-text {
  font-size: 26rpx;
  color: #666;
}

.content-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #E9ECEF;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.char-count {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.contact-input {
  width: 100%;
  border: 1rpx solid #E9ECEF;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 26rpx;
  background: #F8F9FA;
}

.image-upload-section {
  margin-top: 15rpx;
}

.image-list {
  display: flex;
  gap: 20rpx;
  margin-bottom: 15rpx;
}

.image-item {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.remove-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 30rpx;
  height: 30rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

.upload-btn {
  width: 120rpx;
  height: 120rpx;
  border: 2rpx dashed #CCC;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F8F9FA;
}

.upload-icon {
  font-size: 40rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 22rpx;
  color: #666;
}

.image-tip {
  font-size: 22rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.submit-btn {
  flex: 2;
  background: var(--dopamine-primary);
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn:disabled {
  background: #CCC;
}

.clear-btn {
  flex: 1;
  background: #F8F9FA;
  color: #666;
  border: 1rpx solid #E9ECEF;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 32rpx;
}

.footer-note {
  text-align: center;
  padding: 20rpx;
}

.note-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}