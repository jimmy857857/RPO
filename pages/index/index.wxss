/* index.wxss */
page {
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);
  background-size: 400% 400%;
  animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.container {
  padding: 30rpx 20rpx;
  padding-bottom: 30rpx;
  min-height: calc(100vh - 100rpx);
  box-sizing: border-box;
  position: relative;
  overflow-x: hidden;
  background: transparent;
}

/* 预算卡片 - 苹果液态玻璃效果 */
.budget-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(60rpx) saturate(180%);
  -webkit-backdrop-filter: blur(60rpx) saturate(180%);
  border-radius: 40rpx;
  padding: 44rpx 40rpx;
  margin-bottom: 32rpx;
  color: rgba(0, 0, 0, 0.85);
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.08),
    0 8rpx 24rpx rgba(0, 0, 0, 0.06),
    0 0 0 0.5rpx rgba(255, 255, 255, 0.8) inset,
    0 1rpx 0 rgba(255, 255, 255, 0.9) inset;
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  border: 0.5rpx solid rgba(255, 255, 255, 0.6);
}

.budget-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.8) 20%, 
    rgba(255, 255, 255, 0.9) 50%, 
    rgba(255, 255, 255, 0.8) 80%, 
    transparent 100%);
  z-index: 1;
}

.budget-card::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 60%);
  animation: liquidFlow 8s ease-in-out infinite;
  pointer-events: none;
}

@keyframes liquidFlow {
  0%, 100% { 
    transform: translate(0, 0) scale(1);
    opacity: 0.3;
  }
  33% { 
    transform: translate(20%, 20%) scale(1.1);
    opacity: 0.5;
  }
  66% { 
    transform: translate(-20%, 20%) scale(0.9);
    opacity: 0.4;
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  50% { transform: translate(30%, 30%) rotate(180deg); }
}

.budget-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.budget-title {
  font-size: 40rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.9);
  letter-spacing: -0.5rpx;
  position: relative;
  z-index: 2;
}

.budget-date {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.6);
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx) saturate(150%);
  -webkit-backdrop-filter: blur(20rpx) saturate(150%);
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  border: 0.5rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    0 0 0 0.5rpx rgba(255, 255, 255, 0.9) inset;
  position: relative;
  z-index: 2;
}

.budget-content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 36rpx;
  position: relative;
  z-index: 1;
  gap: 20rpx;
}

.budget-item {
  text-align: center;
  flex: 1;
  background: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(30rpx) saturate(150%);
  -webkit-backdrop-filter: blur(30rpx) saturate(150%);
  border-radius: 28rpx;
  padding: 24rpx 16rpx;
  transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  border: 0.5rpx solid rgba(255, 255, 255, 0.7);
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.06),
    0 0 0 0.5rpx rgba(255, 255, 255, 0.8) inset;
  position: relative;
  overflow: hidden;
}

.budget-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.9) 50%, 
    transparent 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.budget-item:active {
  transform: scale(0.97);
  background: rgba(255, 255, 255, 0.65);
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.08),
    0 0 0 0.5rpx rgba(255, 255, 255, 0.9) inset;
}

.budget-item:active::before {
  opacity: 1;
}

.budget-label {
  display: block;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.6);
  margin-bottom: 12rpx;
  font-weight: 500;
  position: relative;
  z-index: 2;
}

.budget-value {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: rgba(0, 0, 0, 0.9);
  letter-spacing: -0.5rpx;
  position: relative;
  z-index: 2;
}

.budget-value.expense {
  color: #ff3b30;
}

.budget-value.remaining {
  color: #34c759;
}

.budget-value.total {
  color: rgba(0, 0, 0, 0.9);
}

.budget-progress {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.progress-bar {
  flex: 1;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.08);
  border-radius: 10rpx;
  margin-right: 24rpx;
  overflow: hidden;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1) inset;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007aff, #5ac8fa, #af52de);
  border-radius: 10rpx;
  transition: width 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 0 20rpx rgba(0, 122, 255, 0.3);
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.5) 30%, 
    rgba(255, 255, 255, 0.8) 50%, 
    rgba(255, 255, 255, 0.5) 70%, 
    transparent 100%);
  animation: progressShine 3s ease-in-out infinite;
}

@keyframes progressShine {
  0% { transform: translateX(-100%) scaleX(1); }
  100% { transform: translateX(200%) scaleX(1); }
}

.progress-text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.7);
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
  position: relative;
  z-index: 2;
}

/* 快速记账按钮 */
.quick-record {
  margin-bottom: 40rpx;
}

.record-btn {
  background: linear-gradient(135deg, #1ba784, #f3a694);
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 40rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(27, 167, 132, 0.4);
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 模块区域 */
.module-section {
  margin-bottom: 36rpx;
  animation: fadeInUp 0.6s ease-out;
  animation-fill-mode: both;
}

.module-section:nth-child(2) {
  animation-delay: 0.1s;
}

.module-section:nth-child(3) {
  animation-delay: 0.2s;
}

.module-section:last-of-type {
  margin-bottom: 36rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 28rpx;
  padding-left: 20rpx;
  position: relative;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  letter-spacing: -0.5rpx;
  z-index: 2;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 5rpx;
  height: 28rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
  border-radius: 3rpx;
  box-shadow: 0 0 8rpx rgba(255, 255, 255, 0.5);
}

.module-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.module-item {
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(50rpx) saturate(180%);
  -webkit-backdrop-filter: blur(50rpx) saturate(180%);
  border-radius: 32rpx;
  padding: 40rpx 12rpx;
  text-align: center;
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.08),
    0 8rpx 24rpx rgba(0, 0, 0, 0.06),
    0 0 0 0.5rpx rgba(255, 255, 255, 0.8) inset,
    0 1rpx 0 rgba(255, 255, 255, 0.9) inset;
  transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  position: relative;
  overflow: hidden;
  border: 0.5rpx solid rgba(255, 255, 255, 0.6);
  min-width: 0;
}

.module-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.9) 20%, 
    rgba(255, 255, 255, 1) 50%, 
    rgba(255, 255, 255, 0.9) 80%, 
    transparent 100%);
  z-index: 1;
}

.module-item::after {
  content: '';
  position: absolute;
  top: -100%;
  left: -100%;
  width: 300%;
  height: 300%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  pointer-events: none;
}

.module-item:active {
  transform: scale(0.96) translateY(-2rpx);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.12),
    0 4rpx 16rpx rgba(0, 0, 0, 0.08),
    0 0 0 0.5rpx rgba(255, 255, 255, 0.9) inset,
    0 1rpx 0 rgba(255, 255, 255, 1) inset;
  background: rgba(255, 255, 255, 0.85);
}

.module-item:active::after {
  top: -50%;
  left: -50%;
  opacity: 0.6;
}

.module-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  display: block;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.15));
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  line-height: 1;
}

.module-item:active .module-icon {
  transform: scale(1.15) rotate(8deg);
  filter: drop-shadow(0 6rpx 16rpx rgba(0, 0, 0, 0.2));
}

.module-icon.accounting {
  filter: drop-shadow(0 4rpx 12rpx rgba(102, 126, 234, 0.4));
}

.module-item:active .module-icon.accounting {
  filter: drop-shadow(0 6rpx 20rpx rgba(102, 126, 234, 0.6));
}

.module-icon.statistics {
  filter: drop-shadow(0 4rpx 12rpx rgba(240, 147, 251, 0.4));
}

.module-item:active .module-icon.statistics {
  filter: drop-shadow(0 6rpx 20rpx rgba(240, 147, 251, 0.6));
}

.module-icon.budget {
  filter: drop-shadow(0 4rpx 12rpx rgba(79, 172, 254, 0.4));
}

.module-item:active .module-icon.budget {
  filter: drop-shadow(0 6rpx 20rpx rgba(79, 172, 254, 0.6));
}

.module-icon.wheel {
  filter: drop-shadow(0 4rpx 12rpx rgba(250, 112, 154, 0.4));
}

.module-item:active .module-icon.wheel {
  filter: drop-shadow(0 6rpx 20rpx rgba(250, 112, 154, 0.6));
}

.module-icon.qa {
  filter: drop-shadow(0 4rpx 12rpx rgba(48, 207, 208, 0.4));
}

.module-item:active .module-icon.qa {
  filter: drop-shadow(0 6rpx 20rpx rgba(48, 207, 208, 0.6));
}

.module-icon.dice {
  filter: drop-shadow(0 4rpx 12rpx rgba(168, 237, 234, 0.4));
}

.module-item:active .module-icon.dice {
  filter: drop-shadow(0 6rpx 20rpx rgba(168, 237, 234, 0.6));
}

.module-text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.85);
  font-weight: 600;
  letter-spacing: -0.3rpx;
  position: relative;
  z-index: 2;
}

/* 最近记录 - 苹果液态玻璃效果 */
.recent-section {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(60rpx) saturate(180%);
  -webkit-backdrop-filter: blur(60rpx) saturate(180%);
  border-radius: 40rpx;
  padding: 40rpx;
  margin-bottom: 0;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.08),
    0 8rpx 24rpx rgba(0, 0, 0, 0.06),
    0 0 0 0.5rpx rgba(255, 255, 255, 0.8) inset,
    0 1rpx 0 rgba(255, 255, 255, 0.9) inset;
  animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
  animation-delay: 0.3s;
  animation-fill-mode: both;
  border: 0.5rpx solid rgba(255, 255, 255, 0.6);
  position: relative;
  overflow: hidden;
}

.recent-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.8) 20%, 
    rgba(255, 255, 255, 0.9) 50%, 
    rgba(255, 255, 255, 0.8) 80%, 
    transparent 100%);
  z-index: 1;
}

.record-list {
  margin-top: 24rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  border-radius: 16rpx;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 2;
}

.record-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.record-item:active {
  background: rgba(0, 0, 0, 0.03);
  transform: translateX(2rpx);
  border-radius: 16rpx;
}

.record-left {
  flex: 1;
}

.record-category {
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  letter-spacing: -0.3rpx;
  color: rgba(0, 0, 0, 0.9);
}

.record-category.expense {
  color: #ff3b30;
}

.record-category.income {
  color: #34c759;
}

.record-note {
  font-size: 24rpx;
  color: #999;
  font-weight: 400;
}

.record-right {
  text-align: right;
}

.record-amount {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 6rpx;
  letter-spacing: -0.5rpx;
}

.record-amount.expense {
  color: #ff3b30;
}

.record-amount.income {
  color: #34c759;
}

.record-time {
  font-size: 22rpx;
  color: #999;
  font-weight: 400;
}